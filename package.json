    "@types/bun": "^1.1.9",
    "@types/opentype.js": "^1.3.8",
    "eslint": "^9.10.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "opentype.js": "^1.3.4",
    "workerpool": "^9.1.3"
  }
