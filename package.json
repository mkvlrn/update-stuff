{
  "name": "update-stuff",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run src/main.ts",
    "build": "bun build src/main.ts --minify --target bun --outfile ./bin/update-stuff.bun",
    "misc:clean": "rm -rf $HOME/.local/share/homemade/update-stuff && rm -rf $HOME/.local/bin/update-stuff",
    "misc:copy": "mkdir -p $HOME/.local/share/homemade/update-stuff && cp ./bin/update-stuff.bun $HOME/.local/share/homemade/update-stuff/update-stuff.bun",
    "misc:script": "echo 'bun run $HOME/.local/share/homemade/update-stuff/update-stuff.bun' > $HOME/.local/share/homemade/update-stuff/update-stuff.sh",
    "misc:make-executable": "chmod +x $HOME/.local/share/homemade/update-stuff/update-stuff.sh",
    "misc:link": "ln -s $HOME/.local/share/homemade/update-stuff/update-stuff.sh $HOME/.local/bin/update-stuff",
    "postbuild": "bun run misc:clean && bun run misc:copy && bun run misc:script && bun run misc:make-executable && bun run misc:link",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@mkvlrn/configurations": "^1.0.4",
    "@types/adm-zip": "^0.5.5",
    "@types/bun": "^1.1.10",
    "@types/opentype.js": "^1.3.8",
    "eslint": "^9.11.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "opentype.js": "^1.3.4",
    "tar": "^7.4.3",
    "workerpool": "^9.1.3"
  }
}
